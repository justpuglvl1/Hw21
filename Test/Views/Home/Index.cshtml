                    </div>
                    <div class="card-footer">
                        <nav class="nav nav-pills flex-column flex-sm-row">
                            <a class="flex-sm-fill text-sm-center nav-link text-center" asp-controller="Home" asp-action="CreateUser">Создать юзера</a>
                        </nav>
                    </div>
                </div>
            }
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="https://klike.net/uploads/posts/2022-11/1668493236_3-32.jpg" class="card-img card-img-top" alt="">
            <div class="card-body">
                <h5 class="card-title text-center">Список пользователей</h5>
                @*<p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>*@
            </div>
            <div class="card-footer">
                <nav class="nav nav-pills flex-column flex-sm-row">
                    <a class="flex-sm-fill text-sm-center nav-link text-center" asp-controller="Note" asp-action="Index">Список пользователей</a>
                </nav>
            </div>
        </div>
    </div>
