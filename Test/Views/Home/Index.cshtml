@{
    ViewData["Title"] = "Home Page";
}
<div style="padding: 30px;"></div>
<nav class="nav nav-pills flex-column flex-sm-row">
    <a class="flex-sm-fill text-sm-center nav-link" asp-controller="Account" asp-action="Login">Вход</a>
    <a class="flex-sm-fill text-sm-center nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
</nav>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="card h-100">
                    <img src="https://gas-kvas.com/uploads/posts/2023-02/1675435936_gas-kvas-com-p-fonovii-risunok-minimalizm-23.jpg" class="card-img card-img-top" alt="">
